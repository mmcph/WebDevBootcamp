<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">WoWZone</p>
            <div class="list-group">
                <li class="list-group-item active">PH 1</li>
                <li class="list-group-item">PH 2</li>
                <li class="list-group-item">PH 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=screenshot.image%>">
                <div class="caption-full">
                    <h4 class="pull-right">1g/hour</h4>
                    <h4><a><%=screenshot.name%></a></h4>
                    <em><p>Submitted by <%= screenshot.author.username %></p></em>
                    <p><%= screenshot.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/screenshots/<%=screenshot._id%>/comments/new">Add a New Comment</a>
                </div>
                <hr>
                <% screenshot.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=comment.author.username%></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%=comment.text%>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>



    

<% include ../partials/footer %>
