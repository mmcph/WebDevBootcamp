<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Create a new screenshot</h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/screenshots" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Zone">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/screenshots">Go Back</a>
        </div>
    </div>

</div>
