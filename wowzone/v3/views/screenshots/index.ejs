<% include ../partials/header %>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to WoWZone</h1>
            <a class="btn btn-primary btn-lg d-block" href="/screenshots/new">Add a New Screenshot</a>
        </div>
    </header>



<!--<style>-->
<!--    img {-->
<!--        max-width: 700px;-->
<!--    }-->
<!--</style>-->

<div class="row text-center" style="display:flex; flex-wrap:wrap;">

    <% screenshots.forEach(function(screenshot) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%=screenshot.image%>">
                <div class="caption">
                    <h3><%=screenshot.name%></h3>
                </div>
                <a href="/screenshots/<%=screenshot._id%>" class="btn btn-primary d-block">More Info</a>
            </div>
        </div>
    <% }); %>
</div>
</div>
<% include ../partials/footer %>